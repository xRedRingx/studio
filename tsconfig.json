{
  // This is the main TypeScript configuration file for the Next.js project.
  "compilerOptions": {
    // Specifies the ECMAScript target version for the compiled JavaScript.
    // 'ES2017' supports features like async/await.
    "target": "ES2017",
    // List of library files to be included in the compilation.
    // 'dom' and 'dom.iterable' for browser environments, 'esnext' for latest JS features.
    "lib": ["dom", "dom.iterable", "esnext"],
    // Allows JavaScript files to be compiled.
    "allowJs": true,
    // Skips type checking of all declaration files (*.d.ts).
    "skipLibCheck": true,
    // Enables all strict type-checking options. Recommended for new projects.
    "strict": true,
    // If true, suppresses emitting files from a compilation. Used for type checking only.
    "noEmit": true,
    // Enables interoperability between CommonJS and ES Modules.
    "esModuleInterop": true,
    // Specifies the module system for the program. 'esnext' allows modern module features.
    "module": "esnext",
    // Specifies how modules are resolved by the compiler. 'bundler' is recommended for modern bundlers like Webpack/Turbopack.
    "moduleResolution": "bundler",
    // Allows importing modules with a '.json' extension.
    "resolveJsonModule": true,
    // Ensures that each file can be safely transpiled without relying on other imports.
    "isolatedModules": true,
    // Specifies JSX code generation: 'preserve' keeps JSX as part of the output to be further processed by another transform step (like Babel).
    "jsx": "preserve",
    // Enables incremental compilation, speeding up subsequent builds.
    "incremental": true,
    // Configuration for editor plugins, particularly for Next.js.
    "plugins": [
      {
        "name": "next" // Enables Next.js specific TypeScript plugin features.
      }
    ],
    // Defines path aliases for module imports, making them shorter and more manageable.
    "paths": {
      "@/*": ["./src/*"] // Allows importing from 'src' directory using '@/' prefix (e.g., '@/components/Button').
    }
  },
  // Specifies the files to be included in the compilation.
  "include": [
    "next-env.d.ts", // Next.js environment type declarations.
    "**/*.ts", // All TypeScript files in the project.
    "**/*.tsx", // All TSX (TypeScript + JSX) files.
    ".next/types/**/*.ts" // Type declarations generated by Next.js.
  ],
  // Specifies files to be excluded from compilation.
  "exclude": ["node_modules"] // Excludes the 'node_modules' directory.
}
